<p id="notice"><%= notice %></p>
<p>物件名：<%= @property.name %></p>
<p>賃料：<%= @property.rent %></p>
<p>住所：<%= @property.address %></p>
<p>築年数：<%= @property.age %></p>
<p>備考：<%= @property.notes %></p>
<hr>
<% n = 0 %>
<% @property.stations.each do |station| %>
  <h3>最寄り駅<%= n += 1 %></h3>
  <p>路線名：<%= station.line %></p>
  <p>駅名：<%= station.name %></p>
  <p>徒歩分数：<%= station.time %></p>
<% end %>
<%= link_to '編集', edit_property_path(@property) %>
<%= link_to '戻る', properties_path %>
